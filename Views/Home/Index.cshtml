<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Form Submission</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/index.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    @model Form
    <form asp-action='Create' method='post' id="container" asp-controller="Home" >
         
       <h1>Form</h1>
       <div>
       <span asp-validation-for= "First_name"></span>  
       <label asp-for="First_name">First Name:</label>
       <input  class="form-control" type="text" asp-for="First_name" placeholder="John">
       </div>
       <div>     
        <span asp-validation-for= "Last_name"></span>  
        <label asp-for="Last_name">Last Name:</label>
        <input class="form-control" type="text" asp-for="Last_name" placeholder="Doe">
       </div>    
       <div>
        <span asp-validation-for= "Age"></span>  
        <label asp-for="Age">Age:</label>
        <input class="form-control" type="number" asp-for="Age" placeholder="33">
       </div>
       <div>
        <span asp-validation-for= "Email"></span>  
        <label asp-for="Email">Email:</label>
        <input class="form-control" type="email" asp-for="Email" placeholder="Example@example.com">
       </div>
       <div>
        <span asp-validation-for= "Password"></span>  
        <label asp-for="Password">password:</label>
        <input class="form-control" type="password" asp-for="Password" >
       </div>   

       <input type="submit" id="button" class="btn-secondary" value="Submit"/>
   </form>
</body>
</html>